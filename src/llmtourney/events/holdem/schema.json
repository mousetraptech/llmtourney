{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Hold'em Action",
  "type": "object",
  "properties": {
    "action": {
      "type": "string",
      "enum": ["fold", "call", "raise"]
    },
    "amount": {
      "type": "integer",
      "minimum": 0
    },
    "reasoning": {
      "type": "string"
    }
  },
  "required": ["action"],
  "if": {
    "properties": { "action": { "const": "raise" } }
  },
  "then": {
    "required": ["action", "amount"]
  },
  "additionalProperties": false
}
