{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Bullshit Action",
  "oneOf": [
    {
      "title": "Play cards",
      "type": "object",
      "properties": {
        "action": { "type": "string", "const": "play" },
        "cards": {
          "type": "array",
          "items": { "type": "integer", "minimum": 0 },
          "minItems": 1,
          "maxItems": 4
        },
        "reasoning": { "type": "string" }
      },
      "required": ["action", "cards"],
      "additionalProperties": false
    },
    {
      "title": "Challenge (call bullshit or pass)",
      "type": "object",
      "properties": {
        "action": {
          "type": "string",
          "enum": ["call", "pass"]
        },
        "reasoning": { "type": "string" }
      },
      "required": ["action"],
      "additionalProperties": false
    }
  ]
}
